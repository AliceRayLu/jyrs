.search-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 70%;
  height: 4.5vh;
  padding: 0 10px;
  background-color: #fff;
  border: 2rpx solid #000;
  border-radius: 25px;
  margin-top: 0.5vh;
}
.search-box {
  flex: 1;
  height: 80%;
  padding-left: 10px;
  border: none;
  outline: none;
}
.search-icon {
  width: 40px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add {
  display: flex;
  align-items: center;
  width: 85% !important;
  height: 6vh;
  border-radius: 30px;
  background-color: var(--light-blue);
  margin: 2vh;
}
.add-icon {
  width: 3vh;
  height: 3vh;
  background-repeat: no-repeat;
  background-size: contain;
  margin-left: 1vw;
  margin-right: 2vw;
}

.all-collapse{
  align-items: flex-start;
  display: flex;
  margin:1.5vh;
}


.collapse{
  width: 80vw;
  height: 5vh;
}

.details{
  margin:.5vh;
}


.popTitle {
  color: white;
  background-color: #12527B;
  padding: 10px;
  display: flex;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  font-weight: bold;
}
.information{
  background-color: white;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  height: 400px;
  padding: 10px;
}
.popButton {
  color: white;
  background-color: #12527B;
  margin-top: 10px;
  border-radius: 98rpx;
}

.buttons{
  display: flex;
  justify-content: flex-end;
  margin-right:5vw;
}