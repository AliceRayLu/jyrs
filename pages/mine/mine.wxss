/* pages/mine/mine.wxss */
.horizon {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 80%;
}
.head-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10%;
}

.expiration {
  display: flex;
  align-items: center;
  width: 85% !important;
  height: 7vh;
  border-radius: 30px;
  background-color: #F3F9FF;
  padding-left: 5vw;
  margin-top: 3vh;
}
.expiration-date {
  margin-left: 5vw;
  color: red;
}

.table {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 2vh;
}
.table-header, .table-row {
  width: 100%;
  height: 5vh;
}
.table-header {
  background-color: #F0F0F0;
  border-top: 1px solid #b0b0b0;
}
.table-row {
  justify-content: center;
}
.table-cell {
  width: 95%;
}