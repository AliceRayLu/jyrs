/* pages/register.wxss */
.head {
  display: flex;
  align-items: center;
  width: 80%;
}
.head-logo {
  height: 13vh;
  width: 33%;
}
.head-split {
  width: 1px;
  height: 13vh;
  background: black;
  margin: 0 5vw;
}
.head-text text {
  font-size: 3vh;
  letter-spacing: 3vw;
}

.input-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 75% !important;
  margin-top: 1.5vh;
}
.input {
  width: 100%;
  height: 90rpx;
  border-radius: 30rpx;
  background-color: #F3F9FF;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.error {
  width: 96%;
  margin-top: 5px;
  color: red;
}
.label {
  width: 35%;
  padding-left: 1.5vw;
}

.time-container{
  display: flex;
  justify-content: left;
  margin-top: 1.5vh;
}

.time-label{
  float: left;
  display: inline;
  padding:1vh;
}

.button_pic{
  width: 75% !important;
  height: 80rpx;
  border-radius: 30rpx;
  background-color: #F3F9FF;
  box-sizing: border-box;
  padding-left: 30rpx;
  margin-top:1.5vh;
}

.button {
  width: 75% !important;
  height: 80rpx;
  border-radius: 30rpx;
  color: #ffffff;
  background-color: #347CAF;
  margin-top: 5vh;
  margin-bottom: 2vh;
}

.pics{
  margin: 1vh;
}

.time-btn{
  border-radius: 30rpx;
  background-color: #F3F9FF;
  box-sizing: border-box;
  padding-left: 30rpx;
}
