<view class="container">
  <view class="head">
    <image class="head-logo" src="/images/logo.jpg" mode="aspectFit" />
    <view class="head-split"></view>
    <view class="head-text">
      <text>更新</text>
    </view>
  </view>

  <button class="add">
    <image class="add-icon" src="/images/ic-add.jpg"></image>
