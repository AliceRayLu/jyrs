/* pages/userInfoUpdate/userInfoUpdate.wxss */
.head {
  display: flex;
  align-items: center;
  width: 80%;
}
.head-logo {
  height: 13vh;
  width: 33%;
}
.head-split {
  width: 1px;
  height: 13vh;
  background: black;
  margin: 0 5vw;
}
.head-text text {
  font-size: 3vh;
  letter-spacing: 3vw;
}

.add {
  display: flex;
  align-items: center;
  width: 85% !important;
  height: 6vh;
  border-radius: 30px;
  background-color: var(--light-blue);
  margin-top: 2vh;
}
.add-icon {
  width: 3vh;
  height: 3vh;
  background-repeat: no-repeat;
  background-size: contain;
  margin-left: 2vw;
  margin-right: 2vw;
}

.input-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 85% !important;
  margin-top: 1.5vh;
}
.label {
  width: 35%;
  padding-left: 1.5vw;
}
.input {
  width: 100%;
  height: 6vh;
  border-radius: 30px;
  background-color: var(--light-blue);
  padding-left: 5vw;
}

.button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 85% !important;
  height: 6vh;
  border-radius: 30px;
  color: #ffffff;
  background-color: #347CAF;
  margin-top: 5vh;
}

.texts{
  margin:1vh;
}

.time-label{
  float: left;
  display: inline;
  padding:1.5vh;
}